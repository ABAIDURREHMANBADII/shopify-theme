{% doc %}
  @prompt
    A product card that includes the product image at the top, then the price and title below. Add a smooth holographic shimmer effect and a shadow.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical | plus: 4 }}px {{ block.settings.shadow_blur | plus: 5 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 | times: 1.2 }});
  }

  .ai-product-card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.1) 25%,
      rgba(255, 182, 193, 0.3) 35%,
      rgba(173, 216, 230, 0.3) 45%,
      rgba(255, 255, 224, 0.3) 55%,
      rgba(221, 160, 221, 0.3) 65%,
      rgba(255, 255, 255, 0.1) 75%,
      transparent 100%
    );
    pointer-events: none;
    z-index: 2;
  }

  .ai-product-card-{{ ai_gen_id }}:hover::before {
    animation: ai-holographic-shimmer-{{ ai_gen_id }} 2s ease-in-out infinite;
  }

  @keyframes ai-holographic-shimmer-{{ ai_gen_id }} {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_ratio }};
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
  }

  .ai-product-card-link-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-decoration: none;
  }

  .ai-product-card-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 3;
  }
{% endstyle %}

<product-card-{{ ai_gen_id }} class="ai-product-card-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.product %}
      {% if block.settings.product.featured_image %}
        <img
          src="{{ block.settings.product.featured_image | image_url: width: 800 }}"
          alt="{{ block.settings.product.featured_image.alt | escape }}"
          class="ai-product-card-image-{{ ai_gen_id }}"
          loading="lazy"
          width="800"
          height="800"
        >
      {% else %}
        <div class="ai-product-card-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    {% else %}
      <div class="ai-product-card-image-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <div class="ai-product-card-empty-state-{{ ai_gen_id }}">
          Next, select a product
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-product-card-content-{{ ai_gen_id }}">
    {% if block.settings.product %}
      <h3 class="ai-product-card-title-{{ ai_gen_id }}">{{ block.settings.product.title }}</h3>
      <div class="ai-product-card-price-{{ ai_gen_id }}">
        {{ block.settings.product.price | money }}
      </div>
      <a href="{{ block.settings.product.url }}" class="ai-product-card-link-{{ ai_gen_id }}" aria-label="View {{ block.settings.product.title }}"></a>
    {% else %}
      <h3 class="ai-product-card-title-{{ ai_gen_id }}">Product title</h3>
      <div class="ai-product-card-price-{{ ai_gen_id }}">PKR 0.00</div>
    {% endif %}
  </div>
</product-card-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCard{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('product-card-{{ ai_gen_id }}', ProductCard{{ ai_gen_id }});
  })();
</script>

